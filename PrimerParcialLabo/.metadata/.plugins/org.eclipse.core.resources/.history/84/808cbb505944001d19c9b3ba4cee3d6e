#ifndef AUTOR_H_
#define AUTOR_H_
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "pais.h"

#define LLENO 1
#define VACIO 0
#define TAM_A 10


typedef struct{
	int idAutor;
	char nombre[51];
	int idPais;
	int estado;

}eAutor;


int CargarDescripcionAutor(eAutor autores[], int tamA, int id, char descAutor[]);
void MostrarAutor(eAutor autores[], int tamA, ePais paises[]);
