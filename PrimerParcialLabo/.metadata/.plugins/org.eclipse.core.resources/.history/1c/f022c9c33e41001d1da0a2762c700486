#include "editorial.h"

void MostrarEditorial(eEditorial editoriales[], int tamE){
	 for(int i=0; i<tamE; i++)
	{
	printf("%d %s\n",editoriales[i].idEditorial,editoriales[i].descEditorial);
	}

}

int CargarDescripcionEditorial(eEstadoVuelo estadoVuelo[], int tam, int id, char descEstado[])
{
	int isOk = 0;

	if(estadoVuelo != NULL && tam > 0 && id >= 1 && id <= 3 && descEstado != NULL)
	{
		for(int i = 0; i < tam; i++)
		{
			if(estadoVuelo[i].idEstado == id)
			{
				strcpy(descEstado,estadoVuelo[i].descEstado);
				break;
			}
		}

		isOk = 1;
		return isOk;
	}
